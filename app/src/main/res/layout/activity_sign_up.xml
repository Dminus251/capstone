<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#ffffff">

        <LinearLayout
            android:layout_width="match_parent"
            android:background="#99ccff"
            android:layout_height="200dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#ffffff"
                android:fontFamily="@font/jua_ttf"
                android:text="TRIP GUIDE"
                android:textSize="55dp"
                android:layout_gravity="center"
                android:gravity="center|bottom"
                android:layout_marginBottom="30dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_gravity="center"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">




            <TextView
                android:id="@+id/text_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="아이디"
                android:textColor="#000000"
                android:fontFamily="@font/jua_ttf"
                android:textSize="20dp"
                android:layout_marginTop="30dp"/>


            <EditText
                android:id="@+id/USERID"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:backgroundTint="#000000"
                android:fontFamily="@font/jua_ttf"
                android:gravity="center_vertical"
                android:hint="아이디를 입력해주세요."
                android:textSize="15dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="비밀번호"
                android:textColor="#000000"
                android:fontFamily="@font/jua_ttf"
                android:textSize="20dp"
                android:layout_marginTop="30dp"/>
            <EditText
                android:id="@+id/USERPASSWORD"
                android:fontFamily="@font/jua_ttf"
                android:hint="비밀번호를 입력해주세요."
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:textSize="15dp"
                android:gravity="center_vertical"
                android:layout_marginTop="10dp"/>
            <TextView
                android:id="@+id/text_pw"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="비밀번호 확인"
                android:textColor="#000000"
                android:fontFamily="@font/jua_ttf"
                android:textSize="20dp"
                android:layout_marginTop="30dp"/>
            <EditText
                android:id="@+id/CHECK_PASSWORD"
                android:fontFamily="@font/jua_ttf"
                android:hint="비밀번호를 다시 입력해주세요."
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:textSize="15dp"
                android:gravity="center_vertical"
                android:layout_marginTop="10dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="성함"
                android:textColor="#000000"
                android:fontFamily="@font/jua_ttf"
                android:textSize="20dp"
                android:layout_marginTop="30dp"/>
            <EditText
                android:id="@+id/USERNAME"
                android:fontFamily="@font/jua_ttf"
                android:hint="성함을 입력해주세요."
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:textSize="15dp"
                android:gravity="center_vertical"
                android:layout_marginTop="10dp"/>
            <TextView
                android:id="@+id/NAME"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="닉네임"
                android:textColor="#000000"
                android:fontFamily="@font/jua_ttf"
                android:textSize="20dp"
                android:layout_marginTop="30dp"/>

            <EditText
                android:id="@+id/USERNICKNAME"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/jua_ttf"
                android:hint = "사용하실 닉네임을 입력해주세요."
                android:textSize="15dp"
                android:gravity="center_vertical" />
            <TextView
                android:id="@+id/email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="이메일"
                android:textColor="#000000"
                android:fontFamily="@font/jua_ttf"
                android:textSize="20dp"
                android:layout_marginTop="30dp"/>

            <EditText
                android:id="@+id/USEREAMAIL"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/jua_ttf"
                android:hint = "이메일 주소를 입력해주세요."
                android:textSize="15dp"
                android:gravity="center_vertical" />


            <Button
                android:id="@+id/SIGNUP"
                android:layout_width="350dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:text="회원 가입하기"
                android:textSize="15dp"
                android:textColor="#ffffff"
                android:fontFamily="@font/jua_ttf"
                android:background="@drawable/btn_repple_ex"
                android:layout_marginTop="20dp"/>
            <TextView
                android:id="@+id/alarm"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/jua_ttf"
                android:textSize="15dp"
                android:textColor="#FD2B75"
                android:text="알람"/>
        </LinearLayout>

    </LinearLayout>
</ScrollView>
